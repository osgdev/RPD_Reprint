<?xml version="1.0" encoding="UTF-8"?>

<Configuration>
	<Appenders>
		<Console target="SYSTEM_OUT" name="console">
			<PatternLayout pattern="[%-5level] %c{36} - %msg%ex{short}%n" />
		</Console>
		<RollingFile name="file">
			<FileName>z:/osg/logs/reprint.log</FileName>
			<PatternLayout pattern="%d{dd-MM-yyyy HH:mm:ss} [%-5level] %c{36} - %msg%ex{short}%n" />
			<Policies>
				<TimeBasedTriggerPolicy interval="1"/>
			</Policies>
			<DefaultRolloverStrategy max="1" />
		</RollingFile>
	</Appenders>

	<Loggers>
		<Logger name="uk.gov.dvla.osg" level="error">
			<AppenderRef ref="file" />
		</Logger>
		<Root level="all">
			<AppenderRef level="all" ref="console" />
		</Root>
	</Loggers>

</Configuration>